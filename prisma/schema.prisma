// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Match {
  id        String   @id @default(cuid())
  player1   String
  player2   String
  score1    Int
  score2    Int
  team1     String
  team2     String
  timestamp DateTime @default(now())

  @@index([player1])
  @@index([player2])
}
